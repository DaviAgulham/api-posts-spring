{
  "info": {
    "name": "API Users & Posts (Laravel/Spring)",
    "_postman_id": "8f4bf1d0-6b1f-4d2b-9b2b-aaaaaaaaaaaa",
    "description": "Colección de endpoints para la prueba técnica. Variables: {{baseUrl}}, {{token}}.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{token}}", "type": "string" }
    ]
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth","register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Davi\",\n  \"email\": \"davi@test.com\",\n  \"password\": \"secret123\",\n  \"password_confirmation\": \"secret123\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Login (sets {{token}})",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.access_token) {",
                  "  pm.collectionVariables.set('token', data.access_token);",
                  "  console.log('Token set in collection variables');",
                  "} else {",
                  "  console.warn('No access_token in response');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"davi@test.com\",\n  \"password\": \"secret123\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/me", "host": ["{{baseUrl}}"], "path": ["auth","me"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List users (paginated)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/users?page=1",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [{ "key": "page", "value": "1" }]
            }
          },
          "response": []
        },
        {
          "name": "Get user by id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/users/1", "host": ["{{baseUrl}}"], "path": ["users","1"] }
          },
          "response": []
        },
        {
          "name": "Update user (admin o dueño)",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/users/1", "host": ["{{baseUrl}}"], "path": ["users","1"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nuevo Nombre\",\n  \"email\": \"nuevo@test.com\",\n  \"role\": \"user\",\n  \"password\": \"\",\n  \"password_confirmation\": \"\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Delete user (admin o dueño)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/users/1", "host": ["{{baseUrl}}"], "path": ["users","1"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "List posts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] }
          },
          "response": []
        },
        {
          "name": "Get post by id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts","1"] }
          },
          "response": []
        },
        {
          "name": "Create post (multipart: title, description, image)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Mi título", "type": "text" },
                { "key": "description", "value": "Mi descripción", "type": "text" },
                { "key": "image", "type": "file", "src": ["/ruta/a/imagen.jpg"] }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update post (multipart, owner o admin)",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts","1"] },
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "title", "value": "Título editado", "type": "text" },
                { "key": "description", "value": "Descripción editada", "type": "text" },
                { "key": "image", "type": "file", "src": ["/ruta/a/otra.jpg"] }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete post (owner o admin)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Accept", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/posts/1", "host": ["{{baseUrl}}"], "path": ["posts","1"] }
          },
          "response": []
        }
      ]
    }
  ]
}
